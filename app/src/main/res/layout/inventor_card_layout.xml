<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
      >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/kullaniciAdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"

                android:textSize="@dimen/title"
                android:text="Title"/>

            <TextView
                android:id="@+id/kullanicipuani"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/kullaniciAdi"
                android:paddingBottom="@dimen/padding_bottom"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/profession"
                android:text="Profession"/>
            <ImageView
                android:id="@+id/overflow"
                android:layout_width="@dimen/ic_overflow_width"
                android:layout_height="@dimen/ic_overflow_height"
                android:layout_alignParentRight="true"
                android:layout_below="@id/kullanicipuani"
                android:layout_marginTop="@dimen/ic_overflow_margin_top"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dots" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>